<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= game.title %></h2>
      <img class="img-fluid" src="<%= game.image%>" />
      <div class="row justify-content-between">
        <form
          class="col-1"
          action="/game/JoinGame/<%= game.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <h3 class="col-3">Players: <%= game.users %></h3>
        <%if(game.user == user.id){ %>
        <form
          action="/game/deleteGame/<%= game._id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <p><%= game.description %></p>
    </div>
    <!-- form for Comments -->
    <div>
    

        <form action="/game/createResult/<%= game.id %>" method="POST">
          <input type="number" placeholder="number of points" name="points">
          <input type="number" placeholder="number of assists" name="assists">
          <input type="number" placeholder="number of rebounds" name="rebounds">
          <button type="submit">Submit</button>
        </form>
   
    </div>
    <section class="addedToCart text-center">
      <h3>Delivered results</h3>
      <ul class="results">
      <% for(var i=0; i<result.length; i++) {%>

          <li class="">
        
            <span><%= result[i].userName %></span>
            <span><%= result[i].points %></span>
            <span><%= result[i].assists %></span>
            <span><%= result[i].rebounds %></span>
         
          </li>

      <% } %>
      </ul>
    </section>
    <div>
    
    
    
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
