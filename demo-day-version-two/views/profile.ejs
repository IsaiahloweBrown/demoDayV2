<%- include('partials/header') -%>
  <main>
    <div class="">
      <div class="text-center text-white">
          <p><strong>User Name</strong>: <%= user.userName %></p>
          <p><strong>Email</strong>: <%= user.email %></p>
          <a href="/logout" class="col-3 btn btn-primary">Logout</a>

      </div>
      <div class="text-center">
        <section class="text-center ">
          <h1 class="profile-header text-white text-lg">Create a Game</h1>
        </section>
       

        <!-- <iframe style="background: #21313C;border: none;border-radius: 2px;box-shadow: 0 2px 10px 0 rgba(70, 76, 79, .2);"  src="https://charts.mongodb.com/charts-basketherapy-gzkyj/embed/dashboards?id=ed7a3eb1-bd85-40b5-ba14-e8f3feeb9e01&theme=dark&autoRefresh=true&maxDataAge=300&showTitleAndDesc=false&scalingWidth=fixed&scalingHeight=fixed"></iframe> -->

      
      </div>
  </div>

  <section class=" flex flex-row card">
    <form action="/game/createGame" enctype="multipart/form-data" method="POST">
      <!-- <section class="mb-4 mx-32 text-center">
        <img class="logo"src="../img/b-logo.png"   alt="basketherapy-logo">
      </section> -->
      <section class="mb-3 mx-45">
        <label for="title" class="block mb-2 text-sm font-medium text-white dark:text-white autofill:bg-blue-300">Title</label>
        <input type="text" name="title" id="base-input" class="bg-black w-32  border border-white text-orange-400 text-sm rounded-lg block w-full p-2.5">
      </section>
      <section class="mb-3 mx-45">
        <label for="description" class="block mb-2 text-sm font-medium text-white dark:text-white autofill:bg-blue-300">Description</label>
        <input type="text" name="description" id="base-input" class="bg-black w-32  border border-white text-orange-400 text-sm rounded-lg block w-full p-2.5">
      </section>
      <section class="mb-3 mx-45">
        <label for="imgUpload" class="block mb-2 text-sm font-medium text-white dark:text-white autofill:bg-blue-300">Image</label>
        <input type="file" class="bg-black w-32  border border-white text-orange-400 text-sm rounded-lg block w-full p-2.5" id="imageUpload" name="file">
      </section>
      <section class="mb-3 mx-45">
        <label for="gameType" class="block mb-2 text-sm font-medium text-white dark:text-white autofill:bg-blue-300">Game Type</label>
        <select type="number" name="gameType" id="gameType" class="bg-black w-32  border border-white text-orange-400 text-sm rounded-lg block w-full p-2.5">
          <option value="2">1v1</option>
          <option value="4">2v2</option>
          <option value="6">3v3</option>
          <option value="8">4v4</option>
          <option value="10">5v5</option>
        </select>
      </section>
      <section class="mb-3 mx-32">
        <label for="base-input" class="block mb-2 text-sm font-medium text-white dark:text-white autofill:bg-blue-300">Date & Time</label>
        <input type="datetime-local" name="dateAndTime" id="dateAndTime" class="bg-black w-32  border border-white text-orange-400 text-sm rounded-lg block w-full p-2.5">
      </section>
      <section class="mb-3 mx-32">
        <label for="location" class="block mb-2 text-sm font-medium text-white dark:text-white autofill:bg-blue-300">Location</label>
            <select type="number" name="location" id="location" class="bg-black w-32  border border-white text-orange-400 text-sm rounded-lg block w-full p-2.5">
              <option value="Philadelphia,PA,US">Philadelphia, PA, US</option>
              <option value="Pittsburg,PA,US">Pittsburg, PA, US</option>
              <option value="Atlanta,GA,US">Atlanta, GA, US</option>
            </select>
      </section>
      <section class="mb-3 mx-32 text-center">
        <button class="btn  border border-white  text-orange-400" type="submit">Submit</button>
      </section>
    </form>
  </section>
  </main>

  <section class="results-area">
    <ul class="row list-unstyled">
    <% for(var i=0; i<games.length; i++) {%>
      <li class="col-6 justify-content-between mt-5">
        <a href="/game/<%= games[i]._id%>">
        
          
      
            <h1 class="text-white text-lg text-center">Player results:</h1>
            <!-- <button id=" btn refreshButton">Refresh</button> -->
            <div id="chart" class="chart">
        
            </div>
            <ul class="results">


          <li class="text-center">
            <% if(result.userName === user.userName) {%>
              <span>Player:<%= result[result.length-1].userName %></span>
              <span><%= result[result.length-1].points %> pts</span>
              <span><%= result[result.length-1].assists %> assists</span>
              <span><%= result[result.length-1].rebounds %> rebounds</span>
            <% } %>
          </li>


      </ul>
    </section>
        </a>
      </li>
    <% } %>
    </ul>
    <div class="text-center">
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
      
    </div>  
  </div>  
</section>    
      

<%- include('partials/footer') -%>